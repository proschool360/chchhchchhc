# Application Configuration
APP_NAME="HRMS - Human Resource Management System"
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hrms_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRY=86400
JWT_REFRESH_EXPIRY=604800

# API Configuration
API_VERSION=v1
API_BASE_URL=/api
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS="GET, POST, PUT, DELETE, OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type, Authorization, X-Requested-With"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="pdf,doc,docx,jpg,jpeg,png,gif"
UPLOAD_PATH=uploads/
PROFILE_PICS_PATH=uploads/profiles/
DOCUMENTS_PATH=uploads/documents/
RESUMES_PATH=uploads/resumes/

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@hrms.com
MAIL_FROM_NAME="HRMS System"

# Security Configuration
SESSION_LIFETIME=120
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Logging Configuration
LOG_LEVEL=debug
LOG_PATH=logs/
LOG_MAX_FILES=30

# Cache Configuration
CACHE_DRIVER=file
CACHE_PATH=cache/
CACHE_DEFAULT_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60